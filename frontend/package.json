{
    "name": "frontend",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "postinstall": "pnpm --filter \"microfrontend_*\" exec -- npm install",
        "start": "pnpm --filter microfrontend_* --parallel start",
        "build": "pnpm --filter microfrontend_* build",
        "serve": "pnpm --filter microfrontend_* --parallel serve",
        "clean": "pnpm --filter microfrontend_* --parallel clean"
    },
    "dependencies": {
        "@module-federation/enhanced": "^0.2.6",
        "pnpm": "^9.5.0"
    }
}
